<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_onCourt_players"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#202020">

    <ImageView
        android:id="@+id/imageViewPlayerAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_OnCourtPosition"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/textView_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Michael Jordan"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPlayerAvatar"
        app:layout_constraintStart_toEndOf="@+id/textView_number"
        app:layout_constraintTop_toTopOf="@+id/imageViewPlayerAvatar" />

    <TextView
        android:id="@+id/textView_OnCourtPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="C"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPlayerAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPlayerAvatar" />

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#32"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPlayerAvatar"
        app:layout_constraintStart_toEndOf="@+id/imageViewPlayerAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewPlayerAvatar" />
</android.support.constraint.ConstraintLayout>