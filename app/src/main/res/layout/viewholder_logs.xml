<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_logs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/log_border">

    <TextView
        android:id="@+id/textView_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jordan"
        android:textColor="#ffffff"
        android:fontFamily="@font/jersey_m54"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_back_number"
        app:layout_constraintEnd_toEndOf="@+id/textView_action"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_back_number"
        app:layout_constraintTop_toTopOf="@+id/textView_back_number"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/textView_back_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingTop="4dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/ncaa_ucla_condensed"
        android:text="#32"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_action"
        app:layout_constraintEnd_toStartOf="@+id/textView_player_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/textView_action"
        app:layout_constraintTop_toBottomOf="@+id/textView_action"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="2pts made"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>























