<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_onCourt_players"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#202020">

    <ImageView
        android:id="@+id/imageViewPlayerAvatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_background"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayout_onCourt_players"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toEndOf="@+id/textView_OnCourtPosition"
        app:layout_constraintTop_toTopOf="@id/constraintLayout_onCourt_players"
        app:srcCompat="@drawable/man" />

    <EditText
        android:id="@+id/textView_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
       android:hint="Enter Name Here"
        android:textColorHint="@color/btnColor"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPlayerAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_number"
        app:layout_constraintTop_toTopOf="@+id/imageViewPlayerAvatar" />

    <TextView
        android:id="@+id/textView_OnCourtPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="C"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPlayerAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPlayerAvatar" />

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="#32"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPlayerAvatar"
        app:layout_constraintStart_toEndOf="@+id/imageViewPlayerAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageViewPlayerAvatar" />
</androidx.constraintlayout.widget.ConstraintLayout>