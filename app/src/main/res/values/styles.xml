<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="iconSize">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="iconInner" parent="iconSize">

        <item name="android:background">@drawable/button_border_new</item>
        <item name="android:padding">11dp</item>
        <item name="android:tint">#fff9bf</item>
    </style>
    <style name="iconInnerGreen" parent="iconSize">

        <item name="android:background">@drawable/button_border_green</item>
        <item name="android:padding">11dp</item>
        <item name="android:tint">#fff9bf</item>
    </style>
</resources>